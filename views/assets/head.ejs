        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button {
        width: 100%;
        background: #007BFF;
        color: #fff;
        border: none;
        padding: 10px;
        margin: 10px 0;
        border-radius: 5px;
        cursor: pointer;
    }

    button:hover {
        background: #0056b3;
    }

    .confirm{
        background-color: green;
        padding: 0.8em;
        color: white;
        border-radius: 4px;
        width: 60%;
        margin-left: 2%;
        width: 150px;
    }

